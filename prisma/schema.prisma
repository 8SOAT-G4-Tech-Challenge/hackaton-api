generator client {
  provider = "prisma-client-js"
	binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id			String @id @default(uuid())
	name		String
	email		String @unique

	@@map("users") // nome exato em que a tabela será criado
}

