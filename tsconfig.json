{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@src/*": ["./src/*"],
			"@controllers/*": ["./src/controllers/*"],
			"@lib/*": ["./src/lib/*"],
			"@models/*": ["./src/models/*"],
			"@routes/*": ["./src/routes/*"],
			"@services/*": ["./src/services/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
